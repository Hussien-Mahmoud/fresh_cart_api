# Django core settings
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_CSRF_TRUSTED_ORIGINS=
DJANGO_TIME_ZONE=UTC
USE_SECURE_PROXY_SSL_HEADER=true

# Database (PostgreSQL via DATABASE_URL, e.g., Neon)
DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DBNAME?sslmode=require

# Redis cache (in-container default)
REDIS_URL=redis://127.0.0.1:6379/1

# Cloudinary media storage
# Set USE_CLOUDINARY to true to store media on Cloudinary
USE_CLOUDINARY=true
# Provide either a single CLOUDINARY_URL or the separate parts below
# CLOUDINARY_URL format: cloudinary://API_KEY:API_SECRET@CLOUD_NAME
CLOUDINARY_URL=
# Or provide separate credentials (optional alternative)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Email
